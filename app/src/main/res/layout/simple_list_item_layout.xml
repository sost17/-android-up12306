<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="421dp"
            android:layout_height="36dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/chepai"
                android:layout_width="75dp"
                android:layout_height="38dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_start"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/start" />

            <TextView
                android:id="@+id/start"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:textSize="18sp"
                android:layout_weight="0.13" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jiantou"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/jiantou" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"

                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_end"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/end" />

            <TextView
                android:id="@+id/end"
                android:layout_width="75dp"
                android:layout_height="match_parent"

                android:textSize="18sp" />

            <ImageView
                android:id="@+id/xiala"
                android:layout_width="22dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/xialao"
                android:layout_weight="0.11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_null"
                android:layout_width="74dp"
                android:layout_height="20dp"
                android:layout_weight="0.01" />

            <TextView
                android:id="@+id/time_start"
                android:layout_width="57dp"
                android:layout_height="20dp"
                android:layout_weight="1.59"

                android:textColor="#619bcb"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_end"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_weight="1.00"

                android:textColor="#619bcb"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ruanwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/yingwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/yingzuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/wuzuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/zuo_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>